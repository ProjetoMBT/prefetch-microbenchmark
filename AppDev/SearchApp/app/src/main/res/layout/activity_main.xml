<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="prefetch_projectmicrobenchmark.searchapp.MainActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#94b1ff"
    android:id="@+id/id_relativelayout1">

    <TextView
        android:text="@string/search_two_fields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_textview1"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_textview1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:id="@+id/id_TIL_field1">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/field_1"
            android:id="@+id/id_field1"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_TIL_field1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:id="@+id/id_TIL_field2">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/field_2"
            android:id="@+id/id_field2"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:text="@string/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_TIL_field2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/id_button1" />

</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#94b1ff"
        android:id="@+id/id_relativelayout2"
        android:layout_below="@+id/id_relativelayout1"
        android:layout_marginTop="5dp">

        <TextView
            android:text="@string/search_one_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_textview2"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_textview2"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:id="@+id/id_TIL_field3">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/field_3"
                android:id="@+id/id_field3"/>
        </android.support.design.widget.TextInputLayout>


        <Button
            android:text="@string/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_TIL_field3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:id="@+id/id_button2" />

    </RelativeLayout>

</RelativeLayout>
